              ]
            }
          }
        },
        {
          "name": "Create Discovery Profile - LocalVMs",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"name\": \"LocalVMs\",\n    \"target\": \"127.0.0.1\",\n    \"port\": {{win_a_port}},\n    \"credential_profile_id\": 1,\n    \"auto_provision\": true\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/discovery_profiles",
              "host": [
                "{{base_url}}"
              ],
              "path": [
