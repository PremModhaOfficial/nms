{
  "info": {
    "name": "Lite NMS API",
    "description": "API collection for the Lite NMS (Network Management System)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{jwt_token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8080"
    },
    {
      "key": "jwt_token",
      "value": ""
    },
    {
      "key": "win_a_port",
      "value": "15985",
      "description": "WinRM port for WIN A VM"
    },
    {
      "key": "win_clone_port",
      "value": "25985",
      "description": "WinRM port for winRm_a_clone_1 VM"
    },
    {
      "key": "vm_username",
      "value": "vboxuser",
      "description": "Default VirtualBox VM username"
    },
    {
      "key": "vm_password",
      "value": "admin",
      "description": "Default VirtualBox VM password"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "if (jsonData.token) {",
                  "    pm.collectionVariables.set('jwt_token', jsonData.token);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"username\": \"admin\",\n    \"password\": \"admin\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/login",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "login"
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Credentials",
      "item": [
        {
          "name": "List Credentials",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/api/v1/credentials",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "v1",
                "credentials"
              ]
            }
          }
        },
        {
          "name": "Get Credential by ID",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/api/v1/credentials/1",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "v1",
                "credentials",
                "1"
              ]
            }
          }
        },
        {
          "name": "Create VBox Credential",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"name\": \"VirtualBox VMs\",\n    \"protocol\": \"winrm\",\n    \"payload\": \"{\\\"username\\\": \\\"{{vm_username}}\\\", \\\"password\\\": \\\"{{vm_password}}\\\"}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/credentials",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "v1",
                "credentials"
              ]
            }
          }
        },
        {
          "name": "Update Credential",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"name\": \"VirtualBox VMs Updated\",\n    \"protocol\": \"winrm\",\n    \"payload\": \"{\\\"username\\\": \\\"vboxuser\\\", \\\"password\\\": \\\"admin\\\"}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/credentials/1",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "v1",
                "credentials",
                "1"
              ]
            }
          }
        },
        {
          "name": "Delete Credential",
          "request": {
            "method": "DELETE",
            "url": {
              "raw": "{{base_url}}/api/v1/credentials/1",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "v1",
                "credentials",
                "1"
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Devices",
      "item": [
        {
          "name": "List Devices",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/api/v1/devices",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "v1",
                "devices"
              ]
            }
          }
        },
        {
          "name": "Get Device by ID",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/api/v1/devices/1",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "v1",
                "devices",
                "1"
              ]
            }
          }
        },
        {
          "name": "Create Device - WIN A",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"hostname\": \"WIN-A\",\n    \"ip_address\": \"127.0.0.1\",\n    \"plugin_id\": \"winrm\",\n    \"port\": {{win_a_port}},\n    \"credential_profile_id\": 1,\n    \"discovery_profile_id\": 1,\n    \"polling_interval_seconds\": 60,\n    \"should_ping\": true\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/devices",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "v1",
                "devices"
              ]
            }
          }
        },
        {
          "name": "Create Device - Win Clone",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"hostname\": \"WIN-CLONE\",\n    \"ip_address\": \"127.0.0.1\",\n    \"plugin_id\": \"winrm\",\n    \"port\": {{win_clone_port}},\n    \"credential_profile_id\": 1,\n    \"discovery_profile_id\": 1,\n    \"polling_interval_seconds\": 60,\n    \"should_ping\": true\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/devices",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "v1",
                "devices"
              ]
            }
          }
        },
        {
          "name": "Update Device",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"hostname\": \"WIN-A-Updated\",\n    \"polling_interval_seconds\": 120,\n    \"should_ping\": false\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/devices/1",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "v1",
                "devices",
                "1"
              ]
            }
          }
        },
        {
          "name": "Delete Device",
          "request": {
            "method": "DELETE",
            "url": {
              "raw": "{{base_url}}/api/v1/devices/1",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "v1",
                "devices",
                "1"
              ]
            }
          }
        }
      ]
    },
