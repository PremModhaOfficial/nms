    {
      "name": "Metrics",
      "item": [
        {
          "name": "Query Metrics",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"device_ids\": [1],\n    \"path\": \"cpu.total\",\n    \"limit\": 10\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/metrics",
