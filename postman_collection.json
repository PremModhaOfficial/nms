          "name": "Provision Device",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"polling_interval_seconds\": 60\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/devices/1/provision",
